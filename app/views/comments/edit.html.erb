<h1>EDIT COMMENT</h1>

<%= form_for @comment do |f| %>


<%= f.label :title %>
<%= f.text_field :title, :required => true %>

<%= f.label "Rating /5" %>
<%= f.number_field :rating, :min => 0, :max => 5 %>

<%= f.label "Comment" %>
<%= f.text_area :body, :required => true %>

<%= f.submit "Add Comment" %>

<% end %>

<small><%= link_to "delete", comment_path, :method => "delete" %></small>
