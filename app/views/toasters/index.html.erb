<div class="container index-list">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-2">
      <h4>Model</h4>
    </div>
    <div class="col-xs-3">
      <h4>Manufacturer</h4>
    </div>
    <div class="col-xs-2">
      <h4>Rating</h4>
    </div>
    <div class="col-xs-2">
      <form action="/toasters">
        <label class="sortlabel">Sort By:</label>
        <select class="sortable" name="sort">
          <option value="model" <% if params[:sort] == "model" %> selected <% end %> >Model Name</option>
          <option value="manufacturer" <% if params[:sort] == "manufacturer" %> selected <% end %>>Manufacturer Name</option>
          <option value="rating" <% if params[:sort] == "rating" %> selected <% end %>>Ratings</option>
        </select>
        <button class="sortbutton" hidden>Go</button>
      </form>
    </div>
  </div>
  <hr class="seperator">

<% @toasters.each do |t| %>
    <div class="row">
    <div class="col-xs-1 col-xs-offset-1">
      <img src="<%= t.image %>" alt="toaster-image" class="listimage">
    </div>
    <div class="col-xs-3">
      <a href="<%= toaster_path(t.id) %>">
        <h4><%= t.model %></h4><% unless t.year.nil? %><h6>( <%= t.year %> )</h6><% end %>
      </a>
    </div>
    <div class="col-xs-3">
      <h4><%= t.manufacturer %></h4>
    </div>
    <div class="col-xs-3">
      <h6><% unless t.score == 0 %>
        <div class="smallshowstars">
          <div class="smallgoldstars" style="width: calc(25px * <%= t.score %>)"></div>
        </div>
        <p><%= sprintf('%.2f', t.score ) %></p>
        <% else %>
        Not yet Rated
        <% end %>
      </h6>
    </div>

    <!-- <%= link_to "View Toaster", toaster_path(t.id) %> -->
  </div>
  <hr class="seperator2">
<% end %>
</div>
