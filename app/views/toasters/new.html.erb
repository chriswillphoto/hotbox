<div class="signup-container">

<h1 class='toaster-add-title'>Add a Toaster to the Database</h1>
<p><%= flash[:error] %></p>
<%= form_for @toaster, :html => {:multipart => true} do |f| %>

  <%= f.label :model, :class => "block" %>
  <%= f.text_field :model, :required => true, :class => "block" %>

  <%= f.label :manufacturer %>
  <%= f.text_field :manufacturer, :required => true, :class => "block" %>

  <%= f.label "Year (optional):", :class => "block" %>
  <%= f.number_field :year, :class => "block" %>

  <%= f.label :description, :class => "block" %>
  <%= f.text_area :description, :class => "block", size: "50x10" %>
  <!-- <%= f.hidden_field :user_id, :value => @current_user.id %> -->

  <%= f.label :image, :class => "block" %>
  <%= f.file_field :image, :class => "block" %>

  <%= f.submit "Add the Toaster", :class => "block btn btn-default" %>


<% end %>

</div>
