<h1>Add a Custom Toaster to the Database</h1>

<%= form_for @custom  do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "50x5" %>

  <%= f.label "Toaster Model" %>
  <%= f.select :toaster_id, Toaster.pluck(:model, :id), :include_blank => true %>

  <%= link_to "Add New Toaster to Database?", new_toaster_path  %>

  <%= f.submit "Add the Custom" %>


<% end %>
