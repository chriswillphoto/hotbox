<div class="cover">

  <div class="titles">
    <h1>Welcome to Hotbox</h1>
    <h3>The World's Premiere</h3>
    <h2>Toaster Centric Social Media Platform</h2>
    <% if @current_user.nil? %>
    <a href="/users/new" class="btn btn-default signup">Sign Up Now!</a>
    <% else %>
    <a href="/toasters" class="btn btn-default signup">View the Toasters</a>
    <% end %>
  </div>

</div>

<div class="container">
  <div class="row users">
    <div class="col-md-5 userbox">
      <div>
        <%= image_tag "https://res.cloudinary.com/dyqesnour/image/upload/v1511836718/users_ededra.png", :class => "home-users vcenter center", :alt => "users-icon" %>
        <h3 style="display: inline-block; margin-left: 20px"><%= @users.length %> Users</h3>

      </div>
    </div>
    <div class="col-md-7">
      <h2>Join a growing community of Toaster enthusiasts</h2>
    </div>
  </div>
</div>

<div class="customs">
  <div class="customs-box">
    <h2>Share Your Custom Toasters Amongst Friends</h2>
    
    <% @customs.each do |c| %>
    <div class="home-custom" style="background-image: url(<%= c.image %>)">
      <h6><%= c.name %> by <a href="/users/<%= c.user.id %>"><%= c.user.username -%></a></h6>


    </div>
    <% end %>
  </div>
</div>

<div class="container home-socialbox">
  <h2 style="text-align: center;">Find Us on Social Media!</h2>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="home-socials">
        <div class="col-sm-3 text-center"><div class="twitlink"></div></div>
        <div class="col-sm-3 text-center"><div class="instalink"></div></div>
        <div class="col-sm-3 text-center"><div class="facelink"></div></div>
        <div class="col-sm-3 text-center"><div class="pinlink"></div></div>
        <!-- <div class="home-twitter">Twitter</div>
        <div class="home-insta">Insta</div>
        <div class="home-facebook">Facebook</div>
        <div class="home-pinterest">Pinterest</div> -->
      </div>
    </div>
  </div>
</div>
